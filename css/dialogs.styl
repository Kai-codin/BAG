.dialog
  background    #111
  border        8px solid #CC7E00
  border-radius 4px
  box-shadow    8px 8px 8px rgba(0, 0, 0, 0.5)
  position      absolute
  z-index       100

  > header
    background     #CC7E00
    font-weight    bold
    padding-bottom 4px

#platformPicker, #timePicker

  form
    display flex

    input, select
      border    none
      flex-grow 1
      font-size x-large
      padding   0 4px
