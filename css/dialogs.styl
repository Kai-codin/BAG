.dialog
  background    #111
  border        8px solid #CC7E00
  border-radius 4px
  box-shadow    8px 8px 8px rgba(0, 0, 0, 0.5)
  position      absolute
  z-index       100

  > header
    background     #CC7E00
    font-weight    bold
    padding-bottom 4px

  &.fullWidth
    width  100%
    height 50%

#platformPicker, #timePicker

  form
    display flex

    input, select
      border    none
      flex-grow 1
      font-size x-large
      padding   0 4px

#servicePicker
  display   flex
  flex-flow column

  form
    overflow auto

    .picker
      display   flex
      flex-wrap wrap
      justify-content space-between

      option
        cursor  pointer
        padding 1em

        &:hover,
        &[selected]
          background #CC7E00



