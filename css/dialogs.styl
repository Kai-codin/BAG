.dialog
  background    #111
  border        8px solid #CC7E00
  border-radius 4px
  box-shadow    8px 8px 8px rgba(0, 0, 0, 0.5)
  position      absolute
  z-index       100

  > header
    background     #CC7E00
    font-weight    bold
    padding-bottom 4px

  &.fullWidth
    width  100%
    height 50%

  &.midHeight
    box-shadow 0 0 16px rgba(0, 0, 0, 0.5)

.filterBox
  background #000
  border     none
  color      inherit
  font-size  inherit
  padding    0.5em 1em
  width      100%

#coachPicker, #integerPicker, #platformPicker, #timePicker
  form
    display flex

    input, select, label
      background white
      border     none
      color      black
      flex-grow  1
      font-size  x-large
      padding    0 4px

#excusePicker, #namedPicker, #servicePicker
  display   flex
  flex-flow column

  form
    display   flex
    flex-flow column
    flex-grow 1

    .picker
      flex-grow 1
      overflow  auto

      dd
        cursor  pointer
        display inline-block
        padding 1em

        &:hover,
        &[selected]
          background #CC7E00

#phrasesetPicker
  display   flex
  flex-flow column

  form
    overflow auto

    li
      cursor        pointer
      display       block
      font-size     large
      overflow      hidden
      padding       1em
      text-overflow ellipsis
      white-space   nowrap

      &:hover,
      &[selected]
        background #CC7E00

#stationPicker, #stationlistPicker
  display   flex
  flex-flow column

  form
    display   flex
    flex-flow column

    .stations
      background black
      color      grey
      list-style none

      dt
        padding 1em

      dd
        background    #222
        border-radius 8px
        color         white
        cursor        move
        display       inline-block
        margin        0.5em
        padding       0.5em

        &:hover,
        &.dragover
          background #CC7E00

        &.dragging
          opacity 0.5

    #stationList
      display   flex
      flex-flow column

      .picker
        overflow auto

        dl
          display   flex
          flex-wrap wrap

        dt
          background  black
          box-shadow  0 5px 10px rgba(0, 0, 0, 0.5)
          font-weight bold
          padding     0.5em 1em
          position    sticky
          top         0
          width       100%

        dd
          cursor  pointer
          padding 1em

          &:hover,
          &[selected]
            background #CC7E00