#toolbar
  flexbox(row, center)
  background     gradient(bottom, $bgDark, 50%, $bgDarker, 100%)
  flex-shrink    0
  height         48px
  padding-bottom 16px
  // Needed so marquee doesn't draw over buttons' focus outline
  z-index        10

  > button
    pressable()
    height  42px
    margin  0 12px
    padding 8px

    svg
      width  24px
      height 24px