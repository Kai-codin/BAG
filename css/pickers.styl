.picker
  flexbox(column)
  background    $bgDarker
  border        8px solid $fgFocus
  border-radius 4px
  position      absolute
  z-index       100

  > header
    background     $fgFocus
    font-weight    bold
    padding-bottom 4px

  > form
    flexbox(column)
    height   100%
    overflow auto

    input, select, label
      backAndForeColor($bgDarkest, $fgBright)
      border        none
      border-radius 0
      flex-grow     1
      font-size     x-large
      padding       8px

    label
      flex-grow 2

  &.fullWidth
    width  100%
    height 50%

  &.modal
    box-shadow 0 0 32px $bgDarkest
    height     90%
    width      90%

  // Filterable list

  .chooser
    flexbox(column)
    flex-grow 1
    height    100%
    overflow  auto

    .chSearchBox
      backAndForeColor($bgDarkest, inherit)
      border    none
      font-size inherit
      padding   16px
      width     100%

    .chChoicesBox
      flex-basis 100%
      overflow   auto

      dl
        display   flex
        flex-wrap wrap

      dt
        background  $bgDarkest
        box-shadow  0 5px 10px alpha($bgDarkest, 0.5)
        font-weight bold
        padding     8px 16px
        position    sticky
        top         0
        // Fixes 1 pixel line offset in various browsers
        transform   translateY(-1px)
        width       100%

      dd
        cursor  pointer
        display inline-block
        padding 16px

        &:hover, &[selected]
          background $fgFocus

#coachPicker, #integerPicker, #platformPicker, #timePicker
  form
    flex-direction row

    // For some reason, integer picker controls are very wide on Chrome
    input
      width 64px

#phrasesetPicker

  // Each phrase item needs to be full width and trimmed
  .chChoicesBox dd
    display       block
    font-size     large
    overflow      hidden
    text-overflow ellipsis
    white-space   nowrap

#stationlistPicker

  // Only show close button on mobile
  #btnCloseStationListPicker
    display none

  // For the station list builder
  .stations
    background  $bgDarkest
    flex-shrink 0
    max-height  40%
    overflow    auto

    dt
      color   $fgDim
      padding 16px

    dd
      background    $bgDarker
      border-radius 8px
      border-right  2px solid $fgFocus
      cursor        move
      display       inline-block
      margin        8px
      padding       8px

      &:hover, &.dragover
        background $fgFocus

      &.dragging
        opacity 0.5

      button
        display none