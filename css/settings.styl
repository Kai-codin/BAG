#settings
  align-content flex-start
  background    alpha($bgDarkest, 0.75)
  display       none
  flex-flow     row wrap
  overflow-x    hidden
  overflow-y    auto
  position      absolute
  transform     translateZ(16px)
  z-index       500

  top    0
  left   0
  width  100%
  height 100%

  button
    pressable()
    font-size large
    height    3rem
    margin    1rem

  #btnResetSettings
    flex 4

  #btnSaveSettings
    flex 6

  #btnVoxTest
    grid-column 2

  h1
    border-bottom  2px solid $fgFocus
    flex           100%
    font-size      xx-large
    padding        1rem
    padding-bottom 0.5rem
    margin-bottom  0.5rem

  p
    column-count 2
    column-gap   1.5rem
    flex         100%
    font-size    small
    line-height  1.5em
    padding      1.5rem
    text-align   justify

  form
    display grid
    flex    1

    grid-template-columns 40% 60%

    label, select, input
      flex      1
      font-size large
      margin    1.5rem

    select
      justify-self right
      width        75%

.settingsVisible
  > #marquee, > #toolbar, > #editor, > .dialog
    filter blur(10px)

  #settings
    display flex