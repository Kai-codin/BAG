// Must be up here, else CSS will fail to load the font
@import "font/5by7.css"
// Must be up here, else global function calls will fail elsewhere (order is important)
@import "globals"
@import "reset"
@import "editor"
@import "marquee"
@import "pickers"
@import "toolbar"
@import "settings"

// Accessibility

:focus
  outline-color  $fgFocus
  outline-offset -4px
  outline-style  solid
  outline-width  4px

// Screens

body
  backAndForeColor($bgDark, $fgBright)
  font-family sans-serif

#mainScreen
  flexbox(column)
  height 100%

#disclaimerScreen
  background $bgDarkest

#tooSmallScreen
  display none

#panicScreen
  background $bgPanic

// Responsive

@media (max-width 500px)
  @import "responsive"

@media (max-height 400px)
  .javascriptEnabled
    #mainScreen, .picker, #settingsScreen, #disclaimerScreen
      display none

    #tooSmallScreen
      display block

// Animations
@import "animations"

// Platform-specific fixes
@import "fixes/iOS"