// Must be up here, else CSS will fail to load the font
@import "font/5by7.css"
// Must be up here, else global function calls will fail elsewhere (order is important)
@import "globals"
@import "dialogs"
@import "editor"
@import "signage"
@import "settings"

// CSS reset

*
  // Fix overflow elements not scrolling properly in Safari
  -webkit-overflow-scrolling touch

  margin     0
  padding    0
  box-sizing border-box

body, html
  width    100%
  height   100%
  overflow hidden

// Parts

body
  backAndForeColor($bgDarkest, $fgBright)
  flexbox(column)
  font-family sans-serif

#toolbar
  flexbox(row, center)
  background     gradient(bottom, $bgDark, 50%, $bgDarker, 100%)
  flex-shrink    0
  height         3rem
  padding-bottom 1rem

  > button
    pressable()
    height  2.75rem
    margin  0 0.75rem
    padding 0.5rem

    svg
      width  1.5rem
      height 1.5rem

iframe
  display none

.panic
  background $bgPanic
  flex-grow  1
  padding    1rem

  h1
    font-style italic

  p
    margin 1rem

// Responsive

@media (max-width 500px)
  @import "responsive"