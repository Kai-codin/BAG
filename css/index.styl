// Must be up here, else CSS will fail to load the font
@import "font/5by7.css"
// Must be up here, else global function calls will fail elsewhere (order is important)
@import "globals"
@import "editor"
@import "marquee"
@import "pickers"
@import "toolbar"
@import "settings"

// CSS reset

*
  // Fix overflow elements not scrolling properly in Safari
  -webkit-overflow-scrolling touch

  margin     0
  padding    0
  box-sizing border-box

body, html
  width    100%
  height   100%
  overflow hidden

// Fixes form controls not working on iOS Web Clips
input, textarea, select
  -webkit-user-select text !important
  -khtml-user-select  text !important
  -moz-user-select    text !important
  -ms-user-select     text !important
  user-select         text !important

// Parts

body
  backAndForeColor($bgDark, $fgBright)
  flexbox(column)
  font-family sans-serif


// Hides embedded phraseset XML documents
iframe
  display none

#tooSmallScreen
  display none

#panicScreen
  background $bgPanic

// Responsive

@media (max-width 500px)
  @import "responsive"

@media (max-height 400px)
  #marquee, #toolbar, #editor, .picker, .settingsVisible #settings
    display none

  #tooSmallScreen
    display block