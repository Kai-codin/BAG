@import "font/5by7.css"

// CSS reset

*
  margin     0
  padding    0
  box-sizing border-box

body, html
  width  100%
  height 100%

// Classes

pressable()
  background  #222
  border      none
  box-shadow  0 0 8px #222
  color       whitesmoke
  cursor      pointer

activePressable()
  color      #AAA
  box-shadow 0 0 4px #000 inset

// Parts

body
  background     black
  display        flex
  flex-direction column
  
.signage
  border       0.5em solid
  border-color #222 #444 #444 #222
  background   #000
  color        orange
  font-family  "5by7", sans-serif
  font-size    3em
  min-height   131px
  padding      0.5em

.toolbar
  background      #444
  display         flex
  justify-content center
  min-height      2.5em
  padding-bottom  0.5em

.toolbar > button
  pressable()
  font-weight bold
  list-style  none
  margin      0 1em
  padding     0.5em

  &:active
    activePressable()

.editor
  background  #222
  color       whitesmoke
  flex-grow   1
  font-family sans-serif
  font-size   3em
  padding     0.5em
  overflow    auto

#phraseset
  display: none;

// Editor

.editor

  // All selectable elements
  excuse, integer, letter, named, optional, phrase[id], phraseset, platform, service,
  station, stationlist, time
    border        2px solid grey
    border-top    none
    border-bottom none
    border-radius 8px
    padding       0 4px
    margin        0 4px

    &:hover
      background rgba(128, 128, 128, 0.1)
      border-color white

  // Optional elements
  optional, phraseset[chance], phrase[chance]
    cursor pointer

    &[collapsed]
      border  none
      //margin  0
      padding 0

      *
        display none

      &:active::before
        activePressable()

      &::before
        pressable()
        content 'â‹®'
        display inline-block
        font-size x-large
        padding 2px
        transform translateY(-9px)