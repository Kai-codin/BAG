@import "font/5by7.css"

// CSS reset

*
  margin     0
  padding    0
  box-sizing border-box

body, html
  width  100%
  height 100%

// Parts

body
  background     black
  display        flex
  flex-direction column
  
.signage
  border      0.5em #666 inset
  background  #000
  cursor      pointer
  color       orange
  font-family "5by7", sans-serif
  font-size   3em
  overflow    auto
  padding     0.5em

.editor
  background  #222
  color       whitesmoke
  flex-grow   1
  font-family sans-serif
  font-size   3em
  padding     0.5em

#phraseset
  display: none;