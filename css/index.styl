@import "font/5by7.css"

// CSS reset

*
  margin     0
  padding    0
  box-sizing border-box

body, html
  width  100%
  height 100%

// Parts

body
  background     black
  display        flex
  flex-direction column
  
.signage
  border       0.5em solid
  border-color #222 #444 #444 #222
  background   #000
  color        orange
  font-family  "5by7", sans-serif
  font-size    3em
  min-height   131px
  padding      0.5em

.toolbar
  background      #444
  display         flex
  justify-content center
  min-height      2.5em
  padding-bottom  0.5em

.toolbar > button
  background  #222
  border      none
  box-shadow  0 0 8px #222
  color       whitesmoke
  cursor      pointer
  font-weight bold
  list-style  none
  margin      0 1em
  padding     0.5em

.toolbar > button:active
  color      #AAA
  box-shadow 0 0 4px #000 inset

.editor
  background  #222
  color       whitesmoke
  flex-grow   1
  font-family sans-serif
  font-size   3em
  padding     0.5em
  overflow    auto

#phraseset
  display: none;
