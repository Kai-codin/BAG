// Color scheme

$bgPanic   = #C21D1D
$bgDarkest = #000
$bgDarker  = #222
$bgDark    = #444
$bgMid     = #808080

$fgMarquee = orange
$fgFocus   = #CC7E00
$fgConfirm = greenyellow
$fgBright  = #FFFFFF
$fgDim     = #AAA

// Functions

hoverable()
  &:hover
    background $bgDark

pressable()
  hoverable()
  background  $bgDarker
  border      none
  box-shadow  0 0 8px $bgDarker
  color       whitesmoke
  cursor      pointer
  fill        whitesmoke

  &:active
    backAndForeColor($bgDarkest, $fgDim)
    box-shadow 0 0 4px $bgDarkest inset

  &:disabled
    background $bgDarker !important
    color      $bgDark   !important
    cursor     default   !important
    fill       $bgDark   !important

    &:active
      background $bgDarker

backAndForeColor($bg = $bgDarkest, $fg = $fgBright)
  background $bg
  color      $fg
  fill       $fg

flexbox($dir = row, $justify = flex-start)
  display         flex
  flex-direction  $dir
  justify-content $justify

// TODO: Apply this where needed
glow($color = $fgFocus, $inset = true)
  text-shadow 0 0 5px $color

  if $inset
    box-shadow 0 0 5px $color, 0 0 5px $color inset
  else
    box-shadow 0 0 5px $color

gradient($dir, $col1, $stop1, $col2, $stop2)
  linear-gradient(to $dir, $col1 $stop1, $col2 $stop2)

// TODO: Apply this where needed
rect($width, $height = $width)
  width  $width
  height $height

// Mixins

no-appearance()
  appearance         none
  -moz-appearance    none
  -webkit-appearance none

singleLine()
  overflow      hidden
  text-overflow ellipsis
  white-space   nowrap

unselectable()
  -webkit-user-select none
  -khtml-user-select  none
  -moz-user-select    none
  -ms-user-select     none
  user-select         none

// Global controls

input[type=checkbox]
  rect(64px, 32px)
  no-appearance()
  unselectable()

  border        2px solid $bgDark
  border-radius 0
  cursor        pointer
  display       block

  &::after
    glow($bgDarkest, false)
    rect(24px)
    background $bgDark
    content    ' '
    display    block
    left       2px
    position   relative
    top        2px

  &:active::after
    left  6px
    width 28px

  &:checked
    glow($fgFocus)
    border-color $fgMarquee

    &::after
      glow($fgFocus)
      background $fgMarquee
      left       34px

    &:active::after
      left  26px
      width 28px

  &[disabled]
    border-style dotted
    cursor       not-allowed
    opacity      1

    &:active::after
      left  2px
      width 24px

input[type=range]
  no-appearance()
  background none
  cursor     pointer
  position   relative

  &::before
    background $fgFocus
    content    ' '
    display    block
    height     3px
    position   absolute
    top        14px
    width      100%

  &::-webkit-slider-runnable-track
    background none
    border     none

  &::-webkit-slider-thumb
    rect(32px)
    no-appearance()
    background $bgDarker
    border     2px solid $fgFocus
    position   relative

// Global classes

[hidden]
  display none !important

.warningScreen
  height  100%
  padding 16px
  width   100%

  h1
    font-style italic

  p, pre
    line-height 150%
    margin      16px