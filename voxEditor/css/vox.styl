// Must be up here, else global function calls will fail elsewhere (order is important)
@import "../../css/globals"

// CSS reset

*
  margin     0
  padding    0
  box-sizing border-box

body, html
  width      100%
  height     100%
  overflow-x hidden

// Parts

body
  backAndForeColor($bgDarkest, $fgBright)
  flexbox(row)
  font-family sans-serif

h1
  border-bottom 2px solid $fgFocus
  padding       16px

#partSelector
  flex-basis 40%
  overflow   auto

  .searchBox
    flexbox(column)
    margin    16px 16px 0 16px
    position  sticky
    top       16px
    z-index   10

    input
      border    none
      flex-grow 1
      font-size large
      padding   8px
      z-index   10

      &.noMatches
        background lightness($bgPanic, 80%)

    menu
      flexbox(row, space-around)
      border-bottom 2px solid $fgFocus

      button
        pressable()
        flex-grow   1
        font-family monospace;
        padding     4px

  #orphanWarning
    background $bgPanic
    margin     16px 12px 16px 16px
    padding    8px

  > ul
    unselectable()
    font-size  12px
    list-style none
    margin     16px 12px 16px 16px
    // Promote to 3D layer, for smoother rendering
    transform  translate3d(0, 0, 1px)

    li
      singleLine()
      background    $bgDarker
      border-right  4px solid $bgDarkest
      cursor        pointer
      margin-bottom 4px
      padding       4px

      &:hover
        background $bgDark

      code
        color $fgDim
        float right

      &.missing
        border-right-color $bgPanic

      &.highlight
        background $bgDark

      &.selected, &.selected code
        backAndForeColor($fgFocus, $fgBrightest)

#tapeDeck
  flex-basis 60%

  #frmSetup
    display grid

    grid-template-columns 20% 30% 20% 30%

    label, select, input
      font-size large
      margin    16px
      width     auto

    spacer
      grid-column-start span 2

    #inputScript
      font-family       monospace
      grid-column-start span 3

    &.saved select, &.saved input
      animation saved 1s

  #frmTapedeck
    flexbox(column)
    align-items center

    > *
      margin 16px 16px 0 16px

    menu button
      pressable()
      font-size large
      height    40px
      margin    8px
      padding   8px

      svg
        width  24px
        height 24px

      &.recording, &.savePending
        background $fgMarquee
        box-shadow 0 0 16px $fgFocus

    .id
      color       $fgDim
      font-size   large
      font-family monospace

    #phrasePreviewer
      color     $fgDim
      font-size x-large
      height    100px

      > *
        margin  0 4px
        padding 0 4px

      .highlight
        border        solid $fgBrightest
        border-radius 8px
        border-width  0 2px
        color         $fgBrightest
        padding       0 4px

      span[data-key]:hover
        background $bgDarker
        cursor     pointer

.clipEditor
  align-self   stretch
  justify-self flex-end
  height       200px
  position     relative

  > *
    position absolute

  .title
    font-size   large
    font-family monospace
    margin-top  8px
    text-align  center
    text-shadow 0 0 10px $bgDarkest
    width       100%

  canvas
    background $bgDarker
    width      100%
    height     100%

  .needle
    background $bgPanic
    top        0
    left       0
    width      2px
    height     100%

  .clipper
    unselectable()
    background alpha($bgDarkest, 0.75)
    cursor     ew-resize
    width      1px
    height     100%

    &::after
      background $bgDarkest
      border     1px solid $fgDim
      content    ' '
      position   absolute
      top        140px
      width      8px
      height     30px

    &.left
      border-right 1px solid $fgDim
      left         0

      &::after
        right -5px

    &.right
      border-left 1px solid $fgDim
      right       0

      &::after
        left -5px

    &:hover, &.dragging
      border-color $fgMarquee

      &::after
        background   $fgFocus
        border-color $fgMarquee

.voiceMeter
  align-self stretch
  height     50px

  canvas
    background $bgDarker
    width      100%
    height     100%

// Hides embedded phraseset XML documents
iframe
  display none

// Animations

@keyframes saved
  from
    background greenyellow

  to
    background $fgBrightest